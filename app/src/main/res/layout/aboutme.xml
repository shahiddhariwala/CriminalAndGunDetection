<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dhariwala.shahid.ir.AboutmeActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_weight="1"
            android:background="@drawable/side_nav_bar"
            android:text="About Me "
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="169dp"
                android:layout_weight="1"
                android:text="Shahid Dhariwala \nEmail: shahid.dhariwala@gmail.com  \nMobile: 9975061158"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="start" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@mipmap/shah" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="358dp"
            android:layout_height="231dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/white"
            android:text="&quot;TECH'' devotee with an enthusiasm for Programming,Artificial Intelligence,\nMachine Learning,Network Security,Gadgets. \nStudent at Thadomal Shahani Engineering College,Developing Skills in Volunteering ,Marketing and love of my life &quot;PROGRAMMING&quot;  "
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.361"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="169dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Back" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
